<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC   "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="main-template" template="/WEB-INF/views/layouts/main_template.jsp">
		<put-attribute name="title" value="Main"/>
		<put-attribute name="header" value="/WEB-INF/views/components/main/header.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/views/components/main/menu.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/components/main/footer.jsp"/>
	</definition>
	<definition name="home" extends="main-template">
		<put-attribute name="title" value="Home"/>
		<put-attribute name="content" value="/WEB-INF/views/home.jsp"/>		
	</definition>
	<definition name="codedetail/*" extends="main-template">
		<put-attribute name="title" value="CodeDetail"/>
		<put-attribute name="content" value="/WEB-INF/views/codedetail/{1}.jsp"/>		
	</definition>

</tiles-definitions>

